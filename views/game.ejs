<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>M&#178;</title>
    <link rel="stylesheet" href="./stylesheets/game.css">
    <script> </script>
</head>
<body>
    <header class="logo">
        <img src="./images/logo.svg" alt="logo of website" id="logo">
    </header>

    <div class="volume">
        <img src="./images/volume.svg" alt="volume speaker icon" id="volume-button">
    </div>

    <div class="message-board">
        <p>Dummy text!</p>
    </div>

    <div class="playing-field">
        <div class="maker-screen">
            <div class="pin-line">
                <div class="pin">?</div>
                <div class="pin">?</div>
                <div class="pin">?</div>
                <div class="pin">?</div>
            </div>
        </div>
        <div class="braker-screen">
          <% for(var i=1; i <= 10; i++) { %>
            <div class="pin-line line-<%= i %>">
                <div class="slider slider-left"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="slider slider-right slider-one"></div>
            </div>
          <% } %>
        </div>
    </div>

    <footer class="control-panel">
        <div class="button">exit</div>
        <div class="button">random</div>
        <div class="colors">
            <div class="color red"></div>
            <div class="color yellow"></div>
            <div class="color blue"></div>
            <div class="color green"></div>
            <div class="color gray"></div>
            <div class="color purple"></div>
            <div class="color black"></div>
            <div class="color orange"></div>
        </div>
        <div class="button">check</div>
        <div class="button">clear</div>
    </footer>
    <script src="./javascripts/game.js"></script>
</body>
</html>
