<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>M&#178;</title>
    <link rel="stylesheet" href="/stylesheets/game.css">
    <link rel="icon" type="image/png" href="/images/logo.png">
    <script> </script>
</head>
<body>
    <header class="logo">
        <img src="/images/logo.svg" alt="logo of website" id="logo">
    </header>

    <div class="volume">
        <img src="/images/volume.svg" alt="volume speaker icon" id="volume-button">
    </div>

    <div class="message-board">
        <p>Dummy text!</p>
    </div>

    <div class="playing-field">
        <div class="maker-screen">
            <div class="pin-line">
                <div class="pin">?</div>
                <div class="pin">?</div>
                <div class="pin">?</div>
                <div class="pin">?</div>
            </div>
        </div>
        <div class="braker-screen">
          <% for(var i=10; i >= 1; i--) { %>
            <div class="pin-line line-<%= i %>">
                <div class="slider slider-left"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="slider slider-right slider-one"></div>
            </div>
          <% } %>
        </div>
    </div>

    <footer class="control-panel">
        <div class="button" onclick="exitClickEvent(event)">exit</div>
        <div class="button" onclick="randomClickEvent(event)">random</div>
        <div class="colors">
            <div class="color red" onclick="colorClickEvent(event)"></div>
            <div class="color yellow" onclick="colorClickEvent(event)"></div>
            <div class="color blue" onclick="colorClickEvent(event)"></div>
            <div class="color green" onclick="colorClickEvent(event)"></div>
            <div class="color gray" onclick="colorClickEvent(event)"></div>
            <div class="color purple" onclick="colorClickEvent(event)"></div>
            <div class="color black" onclick="colorClickEvent(event)"></div>
            <div class="color orange" onclick="colorClickEvent(event)"></div>
        </div>
        <div class="button" onclick="checkClickEvent(event)">check</div>
        <div class="button" onclick="clearClickEvent(event)">clear</div>
    </footer>
    <script src="/javascripts/game.js"></script>
</body>
</html>
