<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>M&#178;</title>
    <link rel="stylesheet" href="/stylesheets/game.css">
    <link rel="icon" type="image/png" href="/images/logo.png">
    <script> </script>
</head>
<body>
    <div class="resolution-alert">
        Please resize your screen to a minimal width of 1600px.
    </div>
    <header class="logo">
        <img src="/images/logo.svg" alt="logo of website" id="logo">
    </header>

    <div class="volume">
        <img src="/images/volume.svg" alt="volume speaker icon" id="volume-button">
    </div>

    <div class="fullscreen">
            <img src="/images/expand.svg" alt="fullscreen mode icon" id="fullscreen-button" onclick="game.fullscreen()">
    </div>

    <div class="message-board">
        <p>Welcome!</p>
    </div>

    <div class="playing-field">
        <div class="maker-screen">
            <div class="pin-line">
                <div class="pin">?</div>
                <div class="pin">?</div>
                <div class="pin">?</div>
                <div class="pin">?</div>
            </div>
        </div>
        <div class="braker-screen">
          <% for(var i=10; i >= 1; i--) { %>
            <div class="pin-line line-<%= i %>">
                <div class="slider slider-left"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="pin"></div>
                <div class="slider slider-right"></div>
            </div>
          <% } %>
        </div>
    </div>

    <footer class="control-panel">
        <div class="button" onclick="game.exit()">exit</div>
        <div class="button" onclick="game.random()">random</div>
        <div class="colors">
            <div class="color red" onclick="game.setNextPinColor('red')"></div>
            <div class="color yellow" onclick="game.setNextPinColor('yellow')"></div>
            <div class="color blue" onclick="game.setNextPinColor('blue')"></div>
            <div class="color green" onclick="game.setNextPinColor('green')"></div>
            <div class="color gray" onclick="game.setNextPinColor('gray')"></div>
            <div class="color purple" onclick="game.setNextPinColor('purple')"></div>
            <div class="color black" onclick="game.setNextPinColor('black')"></div>
            <div class="color orange" onclick="game.setNextPinColor('orange')"></div>
        </div>
        <div class="button" onclick="game.check()">check</div>
        <div class="button" onclick="game.clear()">clear</div>
    </footer>
    <script src="/javascripts/game.js"></script>
</body>
</html>
